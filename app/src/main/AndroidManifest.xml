<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.couchbaselabs.com.instamaterial" >

    <application
        android:name="android.couchbaselabs.com.instamaterial.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="android.couchbaselabs.com.instamaterial.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="android.couchbaselabs.com.instamaterial.PostActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
